
    <div class="page">
        <div class="page_content">
        <div class="page-block">
            <header class="header row g-0">
                <div class="col-2">
                    {{> logo}}
                </div>
                
                <nav class="col-9 header_nav">
                    <div class="header_nav_rigth">
                       {{> nav list=header }}
                    </div>
                </nav>
            </header>
        
        </div>
        {{> hero title=hero.title text=hero.text}}
        
        <div class="page_block">
            <main class="row g-0 plans">
                {{#each plans}}
                 <div class="col plans_card ">
                 {{> card data=this}}
                </div>  
                {{/each}}
                
              
            </main>

        </div>
        <div class="page_block">
            
            <footer class="row g-0 footer">
                <div class="col-3">
                     {{> logo}}
                    <span class="footer_copyright">Copyright 2023-2024</span>

                </div>
                {{#each footer}}
                   <div class="col-3 ">
                   <span class="footer_title">{{title}}</span>
                   {{> nav list=links isVertical=true}}
                    </div>
                {{/each}}
                
                
            </footer>
        </div>
     </div>
 </div>       



